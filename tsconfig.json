{
  "compilerOptions": {
    "target": "es2017",
    "module": "ESNext",
    "lib": ["ESNext"],
    "typeRoots": ["node_modules/@types", "./types"],
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  }
}
