{
  "name": "@rezrah/figma-to-code",
  "description": "Demo for figma to code automation",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "repository": "git@github.com:cat-home-experts/toolshed-native.git",
  "scripts": {
    "build": "lerna run build",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "pub": "lerna publish prerelease --preid alpha --force-publish",
    "pub:dryrun": "lerna publish prerelease --preid alpha --no-git-tag-version --no-push",
    "storybook": "yarn workspace @cat-home-experts/storybook storybook",
    "test": "lerna run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/config-lerna-scopes": "^11.0.0",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.19.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "4.3.8",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.5"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional",
      "@commitlint/config-lerna-scopes"
    ]
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "storybook/**",
      "reference-app/**"
    ]
  }
}
